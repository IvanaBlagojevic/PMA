<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/general_settings"
        android:key="@string/general_settings">

        <ListPreference

            android:key="@string/pref_theme"
            android:summary="@string/pref_theme_sum"
            android:title="@string/pref_theme"
            android:entries="@array/pref_theme_entries"
            android:entryValues="@array/pref_theme_values"
            android:dialogTitle="@string/pref_theme"
            android:defaultValue="1"
            />
        <ListPreference

            android:key="@string/pref_language"
            android:summary="@string/pref_language_sum"
            android:title="@string/pref_language"
            android:entries="@array/pref_language_entries"
            android:entryValues="@array/pref_language_values"
            android:dialogTitle="@string/pref_language"
            android:defaultValue="1"
            />

    </PreferenceCategory>

</PreferenceScreen>