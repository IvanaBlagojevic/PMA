<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".activity.PetDetailActivity"
    tools:showIn="@layout/activity_pet_detail">

    <ImageView
        android:id="@+id/pet_details_image"
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/pd_lin_lay"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/pet_details_image"
        android:layout_alignLeft="@id/pet_details_image"
        android:layout_alignRight="@id/pet_details_image">

        <Button
            android:id="@+id/bView_on_map"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_blue_button"
            android:layout_gravity="center"
            android:text="View on map"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/buttonViewComments"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/comments_pic"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/pd_lin_lay"
        android:layout_alignLeft="@id/pet_details_image"
        android:layout_alignRight="@id/pet_details_image"
        android:background="@color/yellow"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/pet_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignLeft="@id/pet_details_image"
            android:layout_alignRight="@id/pet_details_image"/>

    </LinearLayout>

</RelativeLayout>