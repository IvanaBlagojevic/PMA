<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReportDetailActivity"
    tools:showIn="@layout/activity_report_detail">

    <ImageView
        android:id="@+id/pet_report_details_image"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <LinearLayout
        android:id="@+id/report_lin_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pet_report_details_image"
        android:layout_alignLeft="@id/pet_report_details_image"
        android:layout_alignRight="@id/pet_report_details_image"
        android:orientation="vertical"
        android:background="@drawable/layout_textview">

        <TextView
            android:id="@+id/report_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="30dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/found_btn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_blue_button"
                android:layout_marginLeft="10dp"
                android:text="Found"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/report_comments"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/comments_pic"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>